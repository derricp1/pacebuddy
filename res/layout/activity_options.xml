<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity" >

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <SeekBar
                android:id="@+id/AutoStopBar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="60dp"
                android:max="300"
                android:progress="0" />

            <TextView
                android:id="@+id/AutoStopText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.69"
                android:text="AutoStop: Off"
                android:textSize="24sp" />

            <RadioGroup
                android:id="@+id/radioGroup1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:paddingTop="50sp" >

                <RadioButton
                    android:id="@+id/radio0"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    android:text="@string/color_red" />

                <RadioButton
                    android:id="@+id/radio1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/color_gray" />

                <RadioButton
                    android:id="@+id/radio2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/color_yellow" />

                <RadioButton
                    android:id="@+id/radio3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/color_green" />

                <RadioButton
                    android:id="@+id/radio4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/color_blue" />

                <RadioButton
                    android:id="@+id/radio5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/color_magenta" />

                <RadioButton
                    android:id="@+id/radio6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/color_black" />
            </RadioGroup>
            
            <TextView
                android:id="@+id/Time1Text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.69"
                android:paddingTop="50dp"
                android:layout_below="@+id/radio6"
                android:text="Low Time: 1:00"
                android:textSize="24sp" />              
             <SeekBar
                android:id="@+id/Time1Bar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/Time1Text"
                android:max="120"
                android:progress="1" />    
                
             <TextView
                android:id="@+id/Time2Text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.69"
                android:paddingTop="20dp"
                android:layout_below="@+id/Time1Bar"
                android:text="Medium Time: 10:00"
                android:textSize="24sp" />              
             <SeekBar
                android:id="@+id/Time2Bar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/Time2Text"
                android:max="120"
                android:progress="1" />  
                
               <TextView
                android:id="@+id/Time3Text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.69"
                android:paddingTop="20dp"
                android:layout_below="@+id/Time2Bar"
                android:text="High Time: 30:00"
                android:textSize="24sp" />              
             <SeekBar
                android:id="@+id/Time3Bar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/Time3Text"
                android:max="120"
                android:progress="1" />   

		   	<Button
		        android:id="@+id/button2"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_alignRight="@+id/scrollView1"
		        android:layout_centerVertical="true"
		        android:onClick="Reset_All"
		        android:text="Reset Defaults" />
		
		    <Button
		        android:id="@+id/button1"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_above="@+id/button2"
		        android:layout_alignParentRight="true"
		        android:onClick="Reset"
		        android:text="Defaults" />
		    
		    
		     <TextView
                android:id="@+id/TimeOutText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.69"
   				android:paddingTop="20dp"
                android:layout_below="@+id/TimeOutBar"
                android:text="No Time Out"
                android:textSize="24sp" />              
             <SeekBar
                android:id="@+id/TimeOutBar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/button1"
                android:paddingTop="50dp"
                android:max="120"
                android:progress="0" />   
            
            
        </LinearLayout>

    </ScrollView>



</RelativeLayout>